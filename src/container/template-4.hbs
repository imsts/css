<header class="header">
    <div class="">
        {{> logo }}
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav-2 list=header }}
        </div>
    </nav>
</header>

{{#with main}}
<div class="main">
    <img src="{{image}}" alt="Main image" class="main_image">
    <div class="main_content">
        <h1 class="main_title">{{heading}}</h1>
        <p class="main_text">{{description}}</p>
        <a href="{{href}}" class="button">{{button}}</a>
    </div>
</div>
{{/with}}

<div class="featured">
    {{#each featured}}
    {{> cardFeatured data=this}}
    {{/each}}
</div>

<div class="actions">
    {{#each actions}}
    <div class="actions_content">
        <h3 class="actions_title">{{heading}}</h3>
        <a href="{{url}}" class="button actions_button">{{text}}</a>
    </div>
    {{/each}}
</div>

<footer class="footer">
    <div>
        {{> logo }}
        <span class="footer_copyright">Copyright 2023</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">
            {{title}}
        </span>
        {{> nav-2 list=links isVertical=true }}
    </div>
    {{/each}}
</footer>